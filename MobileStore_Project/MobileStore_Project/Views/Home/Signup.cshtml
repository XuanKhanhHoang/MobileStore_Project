<body>
    <div>
        <!--register-->
        <div class="container main">
            <a href="/" class="text-decoration-none text-dark fs-4 fw-bold">Quay lại</a>
            
            <h5 class="fs-13px my-4">
                Đăng kí để nhận nhiều ưu đãi dành riêng cho thành viên.
            </h5>
            <div  style="margin-bottom: 2rem">
                <form asp-controller="Home" asp-action="Signup" method="post" class="mt-3">

                    <div style="margin-top:7px" class="form-group row">
                        <label asp-for="HoTen" class="col-sm-4 col-form-label text-center">Họ và tên:</label>
                        <div class="col-sm-8">
                            <input asp-for="HoTen" class="form-control" placeholder="Vui lòng nhập họ và tên" name="HoTen" type="text">
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                        </div>
                    </div>
                    <div style="margin-top:7px" class="form-group row">
                        <label asp-for="Email" class="col-sm-4 col-form-label text-center">Email:</label>
                        <div class="col-sm-8">
                            <input asp-for="Email" class="form-control" placeholder="Vui lòng nhập email" name="Email" type="text">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div style="margin-top:7px" class="form-group row">
                        <label asp-for="Passw" class="col-sm-4 col-form-label text-center">Mật khẩu:</label>
                        <div class="col-sm-8">
                            <input asp-for="Passw" type="password" class="form-control" placeholder="Vui lòng nhập mật khẩu" name="Passw">
                            <span asp-validation-for="Passw" class="text-danger"></span>
                        </div>
                    </div>
                    <div style="margin-top:7px" class="form-group row">
                        <label asp-for="SoDt" class="col-sm-4 col-form-label text-center">Số điện thoại</label>
                        <div class="col-sm-8">
                            <input asp-for="SoDt" class="form-control" name="SoDt" type="text" placeholder="Vui lòng nhập số điện thoại">
                            <span asp-validation-for="SoDt" class="text-danger"></span>
                        </div>
                    </div>
                    <div style="margin-top:7px" class="form-group row">
                        <label asp-for="DiaChi" class="col-sm-4 col-form-label text-center">Địa Chỉ: </label>
                        <div class="col-sm-8">
                            <input asp-for="DiaChi" class="form-control" name="DiaChi" type="text" placeholder="Vui lòng nhập địa chỉ">
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="d-flex justify-content-center">
                        <button type="submit" class="btn btn-primary mt-3">Create</button>
                    </div>
                    
                    
                </form>
            </div>
        </div>
    </div>

